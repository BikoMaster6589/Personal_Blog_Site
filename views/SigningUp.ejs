<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // Check if the showAlert variable is defined and true
     <% if(typeof showAlert !== 'undefined' && showAlert) { %>
        Swal.fire({
            title: 'Error!',
            text: '<%= message %>', // Display the error message
            icon: 'error',
            confirmButtonText: 'Sign In'
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to the Sign-In page after acknowledging the alert
                window.location.href = '/signin'; // Change to your sign-in route
            }
        });
     <% } %>
</script>



